<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension PUBLIC "-//Joomla! 3.0//DTD template 1.0//EN" "http://help.aunited.ru/dtd/joomla/3.0/plugin-install.dtd">
<extension version="3.2" type="plugin" group="content" method="upgrade">
	<name>GameTracker Plugin</name>
	<author>Vitaliy Zhukov</author>
	<creationDate>Oct 2016</creationDate>
	<copyright>Vitaliy Zhukov 2016. All rights reserved.</copyright>
	<license>http://www.apache.org/licenses/LICENSE-2.0.html Apache License v2.0</license>
	<authorEmail>info@aunited.ru</authorEmail>
	<authorUrl>http://aunited.ru/youtube</authorUrl>
	<version>0.1</version>
	<description>
	<![CDATA[<p>Using this plugin, insert gametracker banners to your joomla site]]>
	</description>
	<files>
		<filename plugin="gametracker">gametracker.php</filename>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<!--350 banner init-->
				<field name="note350" type="note" label="350 pixel banner" />
				<field name="style350" type="list" default="custom" label="Banner Style" description="350px banner style.">
					<option value="red">Red</option>
					<option value="orange">Orange</option>
					<option value="green">Green</option>
					<option value="blue">Blue</option>
					<option value="custom">Custom</option>
				</field>
				<field name="topc350" type="color" default="#692108" label="Top color" description="350 banner style." />
				<field name="btmc350" type="color" default="#381007" label="Bottom color" description="350 banner style." />
				<field name="fntc350" type="text" default="#ffffff" label="Font color" description="350 banner style." />
				<field name="bdrc350" type="text" default="#000000" label="Border color" description="Width of the YouTube video. Default width is 425 pixels." />
				<!--160 banner init-->
				<field name="note160" type="note" label="160 pixel banner" />
				<field name="style160" type="list" default="gray" label="Banner Style" description="160px banner style.">
					<option value="gray">Gray</option>
					<option value="red">Red</option>
					<option value="custom">Custom</option>
				</field>
				<field name="fntc160" type="color" default="#ffffff" label="Font color" description="160px banner font color" />
				<field name="ttlc160" type="color" default="#c5c5c5" label="Title color" description="160px banner title color" />
				<field name="namec160" type="color" default="#ffffff" label="Server name color" description="160px banner server name color" />
				<field name="bgdc160" type="color" default="#ffffff" label="Border color" description="160px banner border color" />
				<field name="plgraph160" type="radio" class="btn-group btn-group-yesno" default="0" label="Player graph" description="Draw player graph on 160px banner">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="pltop160" type="radio" class="btn-group btn-group-yesno" default="1" label="Top players" description="Show player's top">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
                <field name="mapscr160" type="radio" class="btn-group btn-group-yesno" default="1" label="Map screenshot" description="Show map screenshot">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>
				<!--Html banner init-->
				<field name="note240" type="note" label="HTML banner" />
				<field name="style240" type="list" default="gray" label="Banner Style" description="HTML banner style.">
					<option value="gray">Gray</option>
					<option value="blue">Blue</option>
					<option value="orange">Orange</option>
					<option value="white">White</option>
					<option value="camo">Camo</option>
					<option value="custom">Custom</option>
				</field>
				<field name="bgdc240" type="color" default="#333333" label="Background color" description="HTML banner background color" />
				<field name="fntc240" type="color" default="#cccccc" label="Font color" description="HTML banner font color" />
				<field name="tbgc240" type="color" default="#222222" label="Title background color" description="HTML banner title background color" />
				<field name="ttlc240" type="color" default="#ff9900" label="Title color" description="HTML banner title color" />
				<field name="bdrc240" type="color" default="#555555" label="Border color" description="HTML banner border color" />
				<field name="lnkc240" type="color" default="#ffcc00" label="Link color" description="HTML banner link color" />
				<field name="blkc240" type="color" default="#222222" label="Border link color" description="HTML banner border link color" />
				<field name="wight240" type="integer" default="240" label="Widght" first="140" last="999" step="10" description="HTML banner wight (at least 140px)" />

				<field name="blog240" type="radio" class="btn-group btn-group-yesno" default="1" label="Resent blog" description="Show resent blog descriptions">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="plonline240" type="radio" class="btn-group btn-group-yesno" default="1" label="Online players" description="Show players online">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="onlh240" type="integer" default="100" label="Online block height" first="100" last="999" step="10" description="Height of the online players block (at least 100)" />
				<field name="pltop240" type="radio" class="btn-group btn-group-yesno" default="1" label="Top players" description="Show player's top ">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="toph240" type="integer" default="100" label="Top block height" first="100" last="999" step="10" description="Height of the top players block (at least 100)" />
				<field name="mapscr240" type="radio" class="btn-group btn-group-yesno" default="1" label="Map screenshot" description="Show map screenshot">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="gametracker"><![CDATA[http://help.aunited.ru/gametracker/update/gametracker-update.xml]]></server>
	</updateservers>
</extension>
