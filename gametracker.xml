<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE extension PUBLIC "-//Joomla! 3.0//DTD template 1.0//EN" "http://help.aunited.ru/dtd/joomla/3.0/plugin-install.dtd">
<extension version="3.2" type="plugin" group="content" method="upgrade">
	<name>AU_PLG_GAMETRACKER</name>
	<author>Vitaliy Zhukov</author>
	<creationDate>Oct 2016</creationDate>
	<copyright>Vitaliy Zhukov 2016. All rights reserved.</copyright>
	<license>http://www.apache.org/licenses/LICENSE-2.0.html Apache License v2.0</license>
	<authorEmail>info@aunited.ru</authorEmail>
	<authorUrl>http://aunited.ru/youtube</authorUrl>
	<version>0.1</version>
	<description>
	<![CDATA[<p>Using this plugin, insert <a href="http://gametracker.com">GameTracker</a> banners to your joomla content]]>
	</description>
	<files>
        <folder>language</folder>
		<filename plugin="gametracker">gametracker.php</filename>
        <filename>index.html</filename>
	</files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_gametracker.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.plg_content_gametracker.sys.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.plg_content_gametracker.ini</language>
        <language tag="ru-RU">language/ru-RU/ru-RU.plg_content_gametracker.sys.ini</language>
    </languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<!--350 banner init-->
				<field name="note350" type="note" label="AU_PLG_GT_350_BANNER" />
				<field name="style350" type="list" default="custom" label="AU_PLG_GT_BANNER_STYLE" description="AU_PLG_GT_BANNER_STYLE_350_DESC">
					<option value="red">COLOR_RED</option>
					<option value="orange">COLOR_ORANGE</option>
					<option value="green">COLOR_GREEN</option>
					<option value="blue">COLOR_BLUE</option>
					<option value="custom">COLOR_CUSTOM</option>
				</field>
				<field name="topc350" type="color" default="#692108" label="AU_PLG_GT_TOP_COLOR" description="AU_PLG_GT_TOP_COLOR_350_DESC" />
                <field name="btmc350" type="color" default="#381007" label="AU_PLG_GT_BOTTOM_COLOR" description="AU_PLG_GT_BOTTOM_COLOR_350_DESC" />
				<field name="fntc350" type="color" default="#ffffff" label="AU_PLG_GT_FONT_COLOR" description="AU_PLG_GT_BOTTOM_COLOR_350_DESC" />
				<field name="bdrc350" type="color" default="#000000" label="AU_PLG_GT_BORDER_COLOR" description="AU_PLG_GT_BOTTOM_COLOR_350_DESC" />
				<!--160 banner init-->
				<field name="note160" type="note" label="AU_PLG_GT_160_BANNER" />
				<field name="style160" type="list" default="gray" label="AU_PLG_GT_BANNER_STYLE" description="AU_PLG_GT_BANNER_STYLE_160_DESC">
					<option value="gray">COLOR_GRAY</option>
					<option value="red">COLOR_RED</option>
					<option value="custom">COLOR_CUSTOM</option>
				</field>
				<field name="fntc160" type="color" default="#ffffff" label="AU_PLG_GT_FONT_COLOR" description="AU_PLG_GT_FONT_COLOR_160_DESC" />
				<field name="ttlc160" type="color" default="#c5c5c5" label="AU_PLG_GT_TITLE_COLOR" description="AU_PLG_GT_TITLE_COLOR_160_DESC" />
				<field name="namec160" type="color" default="#ffffff" label="AU_PLG_GT_SERVERNAME_COLOR" description="AU_PLG_GT_SERVERNAME_COLOR_160_DESC" />
				<field name="bgdc160" type="color" default="#ffffff" label="AU_PLG_GT_BORDER_COLOR" description="AU_PLG_GT_BORDER_COLOR_160_DESC" />
				<field name="plgraph160" type="radio" class="btn-group btn-group-yesno" default="0" label="AU_PLG_GT_SHOW_PLAYER_GRAPH" description="AU_PLG_GT_SHOW_PLAYER_GRAPH_160_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="pltop160" type="radio" class="btn-group btn-group-yesno" default="1" label="AU_PLG_GT_SHOW_TOP_PLAYERS" description="AU_PLG_GT_SHOW_TOP_PLAYERS_160_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
                <field name="mapscr160" type="radio" class="btn-group btn-group-yesno" default="1" label="AU_PLG_GT_SHOW_MAP_SCREENSHOT" description="AU_PLG_GT_SHOW_MAP_SCREENSHOT_160_DESC">
                    <option value="0">JNo</option>
                    <option value="1">JYes</option>
                </field>
				<!--Html banner init-->
				<field name="note240" type="note" label="AU_PLG_GT_HTML_BANNER" />
				<field name="style240" type="list" default="gray" label="AU_PLG_GT_BANNER_STYLE" description="AU_PLG_GT_BANNER_STYLE_HTML_DESC">
					<option value="gray">COLOR_GRAY</option>
					<option value="blue">COLOR_BLUE</option>
					<option value="orange">COLOR_ORANGE</option>
					<option value="white">COLOR_WHITE</option>
					<option value="camo">COLOR_CAMO</option>
					<option value="custom">COLOR_CUSTOM</option>
				</field>
				<field name="bgdc240" type="color" default="#333333" label="AU_PLG_GT_BACKGROUND_COLOR" description="AU_PLG_GT_BACKGROUND_COLOR_HTML_DESC" />
				<field name="fntc240" type="color" default="#cccccc" label="AU_PLG_GT_FONT_COLOR" description="AU_PLG_GT_FONT_COLOR_HTML_DESC" />
				<field name="tbgc240" type="color" default="#222222" label="AU_PLG_GT_TITLE_BACKGROUND_COLOR" description="AU_PLG_GT_TITLE_BACKGROUND_COLOR_HTML_DESC" />
				<field name="ttlc240" type="color" default="#ff9900" label="AU_PLG_GT_TITLE_COLOR" description="AU_PLG_GT_TITLE_COLOR_HTML_DESC" />
				<field name="bdrc240" type="color" default="#555555" label="AU_PLG_GT_BORDER_COLOR" description="AU_PLG_GT_BORDER_COLOR_HTML_DESC" />
				<field name="lnkc240" type="color" default="#ffcc00" label="AU_PLG_GT_LINK_COLOR" description="AU_PLG_GT_LINK_COLOR_HTML_DESC" />
				<field name="blkc240" type="color" default="#222222" label="AU_PLG_GT_BORDER_LINK_COLOR" description="AU_PLG_GT_BORDER_LINK_COLOR_HTML_DESC" />
				<field name="wight240" type="integer" default="240" label="Wight" first="140" last="999" step="10" description="HTML banner wight (at least 140px)" />

				<field name="blog240" type="radio" class="btn-group btn-group-yesno" default="1" label="AU_PLG_GT_SHOW_RESENT_BLOG_POSTS" description="AU_PLG_GT_SHOW_RESENT_BLOG_POSTS_HTML_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="plonline240" type="radio" class="btn-group btn-group-yesno" default="1" label="AU_PLG_GT_SHOW_ONLINE_PLAYERS" description="AU_PLG_GT_SHOW_ONLINE_PLAYERS_HTML_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="onlh240" type="integer" default="100" label="AU_PLG_GT_SHOW_PLAYERS_HEIGHT" first="100" last="999" step="10" description="AU_PLG_GT_SHOW_ONLINE_PLAYERS_HTML_DESC" />
				<field name="pltop240" type="radio" class="btn-group btn-group-yesno" default="1" label="AU_PLG_GT_SHOW_TOP_PLAYERS" description="AU_PLG_GT_SHOW_TOP_PLAYERS_HTML_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
				<field name="toph240" type="integer" default="100" label="AU_PLG_GT_SHOW_PLAYERS_HEIGHT" first="100" last="999" step="10" description="AU_PLG_GT_SHOW_TOP_PLAYERS_HEIGHT_HTML_DESC" />
				<field name="mapscr240" type="radio" class="btn-group btn-group-yesno" default="1" label="AU_PLG_GT_SHOW_MAP_SCREENSHOT" description="AU_PLG_GT_SHOW_MAP_SCREENSHOT_HTML_DESC">
					<option value="0">JNo</option>
					<option value="1">JYes</option>
				</field>
			</fieldset>
		</fields>
	</config>
	<updateservers>
		<server type="extension" priority="1" name="gametracker"><![CDATA[http://help.aunited.ru/gametracker/update/gametracker-update.xml]]></server>
	</updateservers>
</extension>
